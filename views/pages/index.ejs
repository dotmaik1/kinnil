                                    <%if (estado.length > 0) { %>
                                    <% for(var i=0; i<estado.length; i++) {%>
                                    <tr class="quote">
                                        <td id="estado" class="
                                                <%if (estado[i]) { %> 
                                                    <%if (estado[i].status == 'online') { %> 
