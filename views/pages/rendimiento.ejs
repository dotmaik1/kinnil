        socket.on('reporte-oee', function(message) {

            window.scroll({ top: 500, left: 0, behavior: 'smooth' }); // Scroll sencillo smooth
            
            $("#piezas-totales-titulo").html("Mts");
            $("#piezas-totales").html(message.rendimiento[0].piezas);

            /*  
            * Gauges
            */
